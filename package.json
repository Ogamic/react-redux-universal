    "resolve-url-loader": "^2.3.0",
    "sass-loader": "^7.0.1",
    "sinon": "^6.0.0",
    "style-loader": "^0.21.0",
    "sw-precache-webpack-plugin": "^0.11.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-middleware": "^3.1.2",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-isomorphic-tools": "^3.0.6"
  }
}
